<dependency>
	<groupId>org.imirsel</groupId>
	<artifactId>nema-flowservice-api</artifactId>
	<version>0.6.1-SNAPSHOT</version>
	   	<exclusions>
        <exclusion>
          <groupId>org.hibernate</groupId>
          <artifactId>hibernate</artifactId>
        </exclusion>
