<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
	<var name="executable" class="org.imirsel.nema.webapp.model.DiyExecutableBundle" />

	<on-start>
		<set name="flowScope.supportedFiles" value="resource.getSupportedFileDataTypes()" />
		<set name="flowScope.supportedOs" value="resource.getSupportedOperatingSystems()" />
		<set name="flowScope.supportedGroups" value="resource.getSupportedGroups()" />
	</on-start>

	<view-state id="upload" model="flowScope.executable">
		<transition on="upload" to="arguments" />
		<transition on="cancel" to="cancel" validate="false"/>
	</view-state>

	<view-state id="argumentsPlain" >


		<transition on="cancel" to="cancel" />
		<transition on="back" to="upload" />
		<transition on="review" to="review">
			<evaluate expression="tasksService.generateMap(requestParameters)"></evaluate>
			<evaluate expression="tasksService.getEmptyTemplate('plain')"
				result="flowScope.paramTemplate" />
			<evaluate expression="tasksService.setCommonTemplate(requestParameters,paramTemplate)" />
			<evaluate
				expression="tasksService.generateExecutableBundle(paramTemplate,executable)"
				result="flowScope.bundle" />
		</transition>
	</view-state>

	<view-state id="argumentsJava" model="javaTemplate">
		<var name="javaTemplate" class="org.imirsel.nema.webapp.model.DiyJavaTemplate" />
		<transition on="cancel" to="cancel" />
		<transition on="back" to="upload" />
		<transition on="review" to="review">

			<evaluate expression="tasksService.setCommonTemplate(requestParameters,javaTemplate)" />
			<evaluate expression="tasksService.setJavaTemplate(requestParameters,executable,javaTemplate)" />
			<evaluate
				expression="tasksService.generateExecutableBundle(javaTemplateTemplate,flowScope.executable)"
				result="flowScope.bundle" />

		</transition>
	</view-state>

	<view-state id="argumentsMatlab" model="matlabTemplate">

		<var name="matlabTemplate" class="org.imirsel.nema.webapp.model.DiyMatlabTemplate" />
		<transition on="cancel" to="cancel" />
		<transition on="back" to="upload" />
		<transition on="review" to="review">
	
			<evaluate
				expression="tasksService.setCommonTemplate(requestParameters,matlabTemplate)" />
	
			<evaluate
				expression="tasksService.generateExecutableBundle(matlabTemplate,flowScope.executable)"
				result="flowScope.bundle" />
		</transition>
	</view-state>

	<view-state id="review">
		<transition on="cancel" to="cancel" />
		<transition on="back" to="arguments" />
		<transition on="save" to="success">
			<evaluate
				expression="tasksService.generateExecutableBundle(paramTemplate,executable)"></evaluate>
		</transition>
	</view-state>

	<action-state id="arguments">
		<evaluate expression="executable.type" />
		<transition on="JAVA" to="argumentsJava" />
		<transition on="MATLAB" to="argumentsMatlab" />
		<transition on="C" to="argumentsPlain" />
		<transition on="SHELL" to="argumentsPlain" />
	</action-state>

	<end-state id="cancel"></end-state>

	<end-state id="success">
		<output name="executableUrl" value="'LiteralValue'" type="java.lang.String" />
		<output name="executableOs" value="resource.getOsDataType(executable.os)"
			type="org.imirsel.nema.model.OsDataType" />
		<output name="executableGroup" value="executable.group" type="java.lang.String" />
		<output name="executableBundle" value="executable"
			type="org.imirsel.nema.model.ExecutableBundle" />


	</end-state>
</flow>