<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
  <id>${buildNumber}-bin</id>
  <formats>
    <format>tar.gz</format>
  </formats>
    <files>
    <file>
      <source>README.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>LICENSE.txt</source>
      <outputDirectory>/</outputDirectory>
    </file>
    <file>
      <source>NOTICE.txt</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>run.sh</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>run.bat</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>run-console.sh</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/flowrepository.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
       <file>
      <source>${project.basedir}/src/main/resources/jdbc.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>${project.basedir}/src/main/resources/mail.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>${project.basedir}/src/main/resources/logging.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
       <file>
      <source>${project.basedir}/src/main/resources/flowservice.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>${project.basedir}/src/main/resources/contentrepositoryservice.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/RepositoryProperties.properties</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
     <file>
      <source>${project.basedir}/src/main/resources/applicationContext.xml</source>
      <outputDirectory>/</outputDirectory>
      <filtered>false</filtered>
    </file>
    <file>
      <source>${project.basedir}/src/main/resources/flowtemplate.sql</source>
      <outputDirectory>/</outputDirectory>
      <filtered>true</filtered>
    </file>
  </files>
  
  
  
    <fileSets>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
   <repositories>
    <repository>
      <includeMetadata>false</includeMetadata>
      <outputDirectory>lib</outputDirectory>
      <fileMode/>
    </repository>
  </repositories>
  
  
 
</assembly>
